<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_controller_bulb"
    android:background="@color/gray_light">

    <ImageView
        android:id="@+id/bulb_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bulb_dark"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/bulb_switch"
        style="@style/none_fill_parent"
        android:background="@drawable/img_power"
        android:layout_below="@id/bulb_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name" />
</RelativeLayout>