    <LinearLayout
        style="@style/width_fill_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/user_activity_login_register"
            style="@style/width_zero_fix"
            android:background="@drawable/btn_selector_blue"
            android:text="@string/register"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/user_activity_login_login"
            style="@style/width_zero_fix"
            android:background="@drawable/btn_selector_login"
            android:text="@string/login"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_activity_login_forget_pwd"
        style="@style/none_fill_parent"
        android:text="@string/forget_password"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" />

    <TextView
