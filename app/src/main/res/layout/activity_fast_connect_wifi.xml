<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tv_background">

    <EditText
        android:id="@+id/activity_connect_wifi_password"
        android:hint="Wifi密码"
        android:inputType="textPassword"
        android:layout_width="fill_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/activity_connect_wifi_username"
        android:inputType="text"
        android:layout_width="fill_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/activity_connect_wifi_password"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/activity_connect_wifi_submit"
        style="@style/width_fill_parent"
        android:layout_margin="20dp"
        android:background="@drawable/corners_white"
        android:text="@string/lockpattern_confirm_button_text"
        android:gravity="center"
        android:textColor="@color/red_dark"
        android:textSize="24sp"
        android:layout_below="@id/activity_connect_wifi_password"
        />

</RelativeLayout>