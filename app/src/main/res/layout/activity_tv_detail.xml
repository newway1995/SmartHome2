<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_tv_detail_content"
    android:background="@drawable/tv_detail_bg">

    <ImageView
        android:id="@+id/tv_detail_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tv_detail_cancel"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/tv_detail_ok"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tv_detail_ok"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="135dp"
        android:layout_marginEnd="135dp"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/tv_detail_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tv_detail_add"
        android:layout_above="@id/tv_detail_ok"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/tv_detail_desc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tv_detail_desc"
        android:layout_above="@id/tv_detail_cancel"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tv_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="@color/red_dark"
        android:textSize="64sp"
        android:layout_above="@id/tv_detail_cancel"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>