<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickd_gray">
    <ImageView
        android:id="@+id/list_item_rasp_img"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_raspberry"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_item_rasp_nickname"
        android:layout_toRightOf="@id/list_item_rasp_img"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Nickname"
        android:textAppearance="@style/black_light_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_item_rasp_function"
        android:layout_toRightOf="@id/list_item_rasp_img"
        android:layout_below="@id/list_item_rasp_nickname"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="@style/gray_18"
        android:layout_width="wrap_content"
        android:text="Function"
        android:layout_height="wrap_content" />

</RelativeLayout>